{
  "info": {
    "name": "Richbond API - Test Erreur 403",
    "description": "Collection Postman pour tester et déboguer l'erreur 403 lors de l'ajout de produits",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Authentification",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "login"]
            },
            "description": "Se connecter et obtenir un token JWT"
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Produits - Tests",
      "item": [
        {
          "name": "GET - Tous les produits",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/produits/all",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "all"]
            },
            "description": "Récupérer tous les produits (endpoint public)"
          },
          "response": []
        },
        {
          "name": "POST - Ajouter produit (SANS token)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"marque\": \"Sealy\",\n  \"reference\": \"TEST-NO-TOKEN\",\n  \"categorie\": \"Matelas\",\n  \"article\": \"Test Produit Sans Token\",\n  \"type\": \"Standard\",\n  \"dimensions\": \"140x190\",\n  \"prix\": 1999.99,\n  \"famille\": \"MATELAS\",\n  \"sousMarques\": \"R VITAL\",\n  \"codeEAN\": \"1234567890\",\n  \"designationArticle\": \"Produit de test sans token\",\n  \"disponible\": true\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/produits/add",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "add"]
            },
            "description": "❌ Devrait retourner 403 si CSRF activé, ou 401 si authentification requise"
          },
          "response": []
        },
        {
          "name": "POST - Ajouter produit (AVEC token)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "description": "Remplacez {{jwt_token}} par votre token réel"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"marque\": \"Sealy\",\n  \"reference\": \"TEST-WITH-TOKEN\",\n  \"categorie\": \"Matelas\",\n  \"article\": \"Test Produit Avec Token\",\n  \"type\": \"Standard\",\n  \"dimensions\": \"140x190\",\n  \"prix\": 1999.99,\n  \"famille\": \"MATELAS\",\n  \"sousMarques\": \"R VITAL\",\n  \"codeEAN\": \"1234567891\",\n  \"designationArticle\": \"Produit de test avec token\",\n  \"disponible\": true\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/produits/add",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "add"]
            },
            "description": "✅ Devrait retourner 201 Created après correction"
          },
          "response": []
        },
        {
          "name": "PUT - Modifier produit",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"marque\": \"Sealy\",\n  \"reference\": \"REF123456-UPDATED\",\n  \"categorie\": \"Matelas\",\n  \"article\": \"Matelas Confort Plus UPDATED\",\n  \"type\": \"Standard\",\n  \"dimensions\": \"140x190\",\n  \"prix\": 2999.99,\n  \"famille\": \"MATELAS\",\n  \"sousMarques\": \"R VITAL\",\n  \"codeEAN\": \"6111250526067\",\n  \"designationArticle\": \"Matelas haute qualité UPDATED\",\n  \"disponible\": true\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/produits/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "1"]
            },
            "description": "Modifier le produit avec l'ID 1"
          },
          "response": []
        },
        {
          "name": "DELETE - Supprimer produit",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/produits/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "1"]
            },
            "description": "Supprimer le produit avec l'ID 1"
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Images",
      "item": [
        {
          "name": "POST - Upload image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8080/api/produits/1/images/upload",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "1", "images", "upload"]
            },
            "description": "Uploader une image pour le produit 1"
          },
          "response": []
        },
        {
          "name": "GET - Image complète",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/produits/1/images/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "1", "images", "1"]
            },
            "description": "Récupérer l'image 1 du produit 1"
          },
          "response": []
        },
        {
          "name": "GET - Thumbnail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/produits/1/images/1/thumbnail",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "1", "images", "1", "thumbnail"]
            },
            "description": "Récupérer la thumbnail de l'image 1 du produit 1"
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Tests CORS",
      "item": [
        {
          "name": "OPTIONS - Preflight Request",
          "request": {
            "method": "OPTIONS",
            "header": [
              {
                "key": "Origin",
                "value": "http://localhost:4200"
              },
              {
                "key": "Access-Control-Request-Method",
                "value": "POST"
              },
              {
                "key": "Access-Control-Request-Headers",
                "value": "content-type,authorization"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/produits/add",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "produits", "add"]
            },
            "description": "Tester la configuration CORS (requête preflight)"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "VOTRE_TOKEN_JWT_ICI",
      "type": "string"
    },
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ]
}

